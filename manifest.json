{
  "manifest_version": 3,
  "name": "Simple RSS Audio Reader",
  "version": "1.0",
  "description": "A simple RSS feed reader that can play audio content",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["popup.html", "player.html"],
    "matches": ["<all_urls>"]
  }]
}
